@model MusicLibraryTest2.Models.UserReportModels

<h2>Most Popular Artist of the Month</h2>
@foreach (var report in Model.UserReports)
{
    <div class="user-report">
        <span class="report-head">Artist: </span><span class="report-body"> @report.ArtistName</span>
        <br>
        <br>
        <span class="report-head">Totoal Monthly Views: </span><span class="report-body"> @report.Views</span>
        <br>
        <br>
        <span class="report-head">Total Monthly Likes: </span><span class="report-body"> @report.Likes</span>
        <br>
        <br>
        <br>

        <span class="report-head">Most Popular Songs</span>
        <br>

        @foreach (var song in report.Songs)
        {
            <div class="songBox">
                <span class="report-head">Song: </span><span class="report-body"> @song.SongName</span>
                <br>
                <br>
                @if (song.AlbumName != null)
                {
                    <span class="report-head">Album: </span><span class="report-body"> @song.AlbumName</span>
                    <br>
                    <br>
                }
                <span class="report-head">Genre: </span><span class="report-body"> @song.Genre</span>
                <br>
                <br>
                <span class="report-head">Monthly Views: </span><span class="report-body"> @song.Views</span>
                <br>
                <br>
                <span class="report-head">Monthly Likes: </span><span class="report-body"> @song.Likes</span>
                <br>
                <br>
            </div>
        }

    </div>
}

